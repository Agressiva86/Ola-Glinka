    <!-- Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
        <div class="lg:w-full grid grid-cols-1 gap-6 content-start">
            <h2
                class="text-xl font-heading font-bold text-secondary lg:text-3xl lg:leading-tight dark:text-accent"
            >
                Poznajmy się!
            </h2>
            <p class="text-base text-primary dark:text-accent-100">
                We help businesses bring ideas to life in the digital world, by
                designing and implementing the technology tools that they need
                to win.
            </p>
        </div>
        <!-- End Col -->

        <div
            class="space-y-10 md:space-y-4 lg:space-y-10 md:col-span-2 rounded-[10px] relative lg:bg-accent-100 lg:dark:bg-dark-600/30 lg:shadow-2xl/20 lg:shadow-secondary-700 lg:dark:shadow-none lg:p-10"
        >
            <div
                class="absolute -z-10 rounded-full bg-accent rotate-4 w-3/4 h-1/2 -bottom-20 -right-4 dark:hidden hidden lg:block"
            >
            </div>
            <div
                class="absolute -z-20 rounded-full bg-primary-400 -rotate-6 w-3/4 h-1/2 -top-6 -left-6 dark:hidden hidden lg:block"
            >
            </div>
            
            <!-- Icon Block -->
            <div class="flex lg:items-center gap-x-5 sm:gap-x-8">
                <!-- Icon -->
                <span
                    class="shrink-0 inline-flex justify-center items-center size-8 lg:size-12 rounded-full bg-secondary text-accent-100 mx-auto dark:bg-secondary dark:text-neutral-200 font-bold font-heading text-[10px] lg:text-base"
                >
                    1.
                </span>
                <div class="grow">
                    <p class="text-base text-primary dark:text-accent-100">
                        <strong>Behawiorystka COAPE</strong> – pierwsza w Łodzi,
                        dyplomu broniłam w 2009 roku.
                    </p>
                </div>
            </div>
            <!-- End Icon Block -->

            <!-- Icon Block -->
            <div class="flex lg:items-center gap-x-5 sm:gap-x-8">
                <!-- Icon -->
                <span
                    class="shrink-0 inline-flex justify-center items-center size-8 lg:size-12 rounded-full bg-secondary text-accent-100 mx-auto dark:bg-secondary dark:text-neutral-200 font-bold font-heading text-[10px] lg:text-base"
                >
                    2.
                </span>
                <div class="grow">
                    <p class="text-base text-primary dark:text-accent-100">
                        Instruktorka szkolenia psów <strong>ALTERI</strong>.
                    </p>
                </div>
            </div>
            <!-- End Icon Block -->

            <!-- Icon Block -->
            <div class="flex lg:items-center gap-x-5 sm:gap-x-8">
                <!-- Icon -->
                <span
                    class="shrink-0 inline-flex justify-center items-center size-8 lg:size-12 rounded-full bg-secondary text-accent-100 mx-auto dark:bg-secondary dark:text-neutral-200 font-bold font-heading text-[10px] lg:text-base"
                >
                    3.
                </span>
                <div class="grow">
                    <p class="text-base text-primary dark:text-accent-100">
                        <strong>Pasjonatka komunikacji psów</strong> – brałam udział
