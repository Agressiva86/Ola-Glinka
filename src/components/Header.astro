---
import OlaLogo from "../components/OlaLogo.astro";
import { Icon } from "astro-icon/components";
---

<header
    class="flex flex-wrap lg:flex-nowrap items-center container max-w-[1550px] mx-auto px-10 flex flex-col flex-row gap-10 items-center pt-10"
>
    <div class="flex-1 flex justify-between items-center">
        <OlaLogo />
    </div>
    <label
        for="menu-toggle"
        class="cursor-pointer lg:hidden block p-3 bg-lightbg-400 rounded-[10px]"
    >
        <svg
            class="fill-current text-secondary dark:text-secondary-300"
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 20 20"
        >
            <title>menu</title>
            <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"></path>
        </svg>
    </label>
    <input class="hidden" type="checkbox" id="menu-toggle" />
    <div class="hidden lg:flex lg:items-center lg:w-auto w-full" id="menu">
        <nav
            class="flex flex-col lg:flex-row gap-4 lg:gap-8 items-center justify-end font-content text-[14px] font-semibold"
        >
            <a
                class="text-primary dark:text-white hover:text-secondary-600 dark:hover:text-secondary-500 transition-all duration-300"
                href="#poznaj-mnie"
            >
                O mnie
            </a>
            <a
                class="text-primary dark:text-white hover:text-secondary-600 dark:hover:text-secondary-500 transition-all duration-300"
                href="#offer"
            >
                W czym mogę pomóc?
            </a>
            <a
                class="text-primary dark:text-white hover:text-secondary-600 dark:hover:text-secondary-500 transition-all duration-300"
                href="#public"
            >
                Publikacje
            </a>

            <a
                class="text-primary dark:text-white hover:text-secondary-600 dark:hover:text-secondary-500 transition-all duration-300"
                href="#contact"
            >
                Kontakt
            </a>

            <div class="flex flex-nowrap gap-8">
                <div
                    class="flex flex-row flex-wrap gap-4 p-4 rounded-full bg-primary dark:bg-dark-600/30"
                >
                    <a
                        href="https://www.facebook.com/zawadzkaglinka"
                        target="_blank"
                        class="group"
                        ><Icon
                            name="simple-icons:facebook"
                            class="text-accent-200 text-base group-hover:text-accent transition-all duration-300 dark:text-white dark:hover:text-secondary"
                        /></a
                    >
                    <a
                        href="https://www.instagram.com/zawadzkaglinka/"
                        target="_blank"
                        class="group"
                        ><Icon
                            name="simple-icons:instagram"
                            class="text-accent-200 text-base group-hover:text-accent transition-all duration-300 dark:text-white dark:hover:text-secondary"
                        /></a
                    >
                    <a
                        href="mailto:zawadzkaglinka@gmail.com"
                        target="_blank"
                        class="group"
                        ><Icon
                            name="simple-icons:gmail"
                            class="text-accent-200 text-base group-hover:text-accent transition-all duration-300 dark:text-white dark:hover:text-secondary"
                        /></a
                    >
                </div>

                <label
                    for="dark-toggle"
                    class="flex items-center cursor-pointer lg:hidden"
                >
                    <div class="relative">
                        <input
                            type="checkbox"
                            name="dark-mode"
                            id="dark-toggle"
                            class="checkbox hidden"
                        />
                        <div
                            class="block border-2 dark:border-white/50 border-primary-600/40 w-[40px] h-6 rounded-full"
                        >
                        </div>
                        <div
                            class="dot absolute left-1 top-1 dark:bg-accent bg-primary w-4 h-4 rounded-full transition"
                        >
                        </div>
                    </div>
                    <!--<div class="ml-3 dark:text-accent-400 text-[14px] text-primary-400 font-semibold">Dark</div>-->
                </label>
            </div>
        </nav>
    </div>

    <label
        for="dark-toggle"
        class="flex items-center cursor-pointer hidden lg:block"
    >
        <div class="relative">
            <input
                type="checkbox"
                name="dark-mode"
                id="dark-toggle"
                class="checkbox hidden"
            />
            <div
                class="block border-2 dark:border-white/50 border-primary-600/40 w-[40px] h-6 rounded-full"
            >
            </div>
            <div
                class="dot absolute left-1 top-1 dark:bg-accent bg-primary w-4 h-4 rounded-full transition"
            >
            </div>
        </div>
        <!--<div class="ml-3 dark:text-accent-400 text-[14px] text-primary-400 font-semibold">Dark</div>-->
    </label>
</header>

<style>
    input:checked ~ .dot {
        transform: translateX(100%);
    }

    #menu-toggle:checked + #menu {
        display: block;
    }
</style>

<script type="text/javascript">
    function darkModeListener() {
        document.querySelector("html").classList.toggle("dark");
        document
        .querySelectorAll("input[type='checkbox']#dark-toggle")
        .forEach((checkbox) => {
            checkbox.checked = !checkbox.checked;
        });
    }

    document
        .querySelectorAll("input[type='checkbox']#dark-toggle")
        .forEach((checkbox) => {
            checkbox.addEventListener("click", darkModeListener);
        });
</script>
