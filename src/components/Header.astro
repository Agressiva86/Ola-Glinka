---
import OlaLogo from "../components/OlaLogo.astro";
import { Icon } from 'astro-icon/components';
---

<header class="container max-w-[1550px] mx-auto px-10 flex flex-col lg:flex-row gap-10 items-center pt-10 mb-10">
    <div class="lg:basis-1/3">
        <a href="#">
            <OlaLogo />
        </a>
    </div>
    <div class="lg:basis-2/3 lg:justify-items-end flex lg:flex-row gap-10 items-center lg:justify-end">
        <nav class="flex flex-col lg:flex-row gap-4 lg:gap-8 items-center justify-end font-content text-[14px] font-semibold">
            <a
                class="text-primary dark:text-white hover:text-secondary-600 dark:hover:text-secondary-500 transition-all duration-300"
                href="#poznaj-mnie"
            >
                O mnie
            </a>
            <a
                class="text-primary dark:text-white hover:text-secondary-600 dark:hover:text-secondary-500 transition-all duration-300"
                href="#offer"
            >
                W czym mogę pomóc?
            </a>
            <a
                class="text-primary dark:text-white hover:text-secondary-600 dark:hover:text-secondary-500 transition-all duration-300"
                href="#public"
            >
                Publikacje
            </a>

            <a
                class="text-primary dark:text-white hover:text-secondary-600 dark:hover:text-secondary-500 transition-all duration-300"
                href="#contact"
            >
                Kontakt
            </a>

            <div class="flex flex-row flex-wrap gap-4 p-4 rounded-full bg-primary dark:bg-dark-600/30">
                <a href="https://www.facebook.com/zawadzkaglinka" target="_blank" class="group"><Icon name="simple-icons:facebook" class="text-accent-200 text-base group-hover:text-accent transition-all duration-300 dark:text-white dark:hover:text-secondary"/></a>
                <a href="https://www.instagram.com/zawadzkaglinka/" target="_blank" class="group"><Icon name="simple-icons:instagram" class="text-accent-200 text-base group-hover:text-accent transition-all duration-300 dark:text-white dark:hover:text-secondary"/></a>
                <a href="mailto:zawadzkaglinka@gmail.com" target="_blank" class="group"><Icon name="simple-icons:gmail" class="text-accent-200 text-base group-hover:text-accent transition-all duration-300 dark:text-white dark:hover:text-secondary"/></a>
            </div>
        </nav>

        <label for="dark-toggle" class="flex items-center cursor-pointer">
            <div class="relative">
                <input
                    type="checkbox"
                    name="dark-mode"
                    id="dark-toggle"
                    class="checkbox hidden"
                />
                <div
                    class="block border-2 dark:border-white/50 border-primary-600/40 w-[40px] h-6 rounded-full"
                >
                </div>
                <div
                    class="dot absolute left-1 top-1 dark:bg-accent bg-primary w-4 h-4 rounded-full transition"
                >
                </div>
            </div>
            <!--<div class="ml-3 dark:text-accent-400 text-[14px] text-primary-400 font-semibold">Dark</div>-->
        </label>
    </div>
</header>

<style>
    input:checked ~ .dot {
        transform: translateX(100%);
    }
</style>

<script type="text/javascript">
    function darkModeListener() {
        document.querySelector("html").classList.toggle("dark");
    }

    document
        .querySelector("input[type='checkbox']#dark-toggle")
        .addEventListener("click", darkModeListener);
</script>
